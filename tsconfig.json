{
    "version": "1.6.0-beta",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "build/",
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "compileOnSave": false,
    "filesGlob": [
        "./editor/**/*.ts",
        "./index.ts",
        "./typings/**/*.ts",
        "./custom_typings/**/*.ts",
        "./editor/**/*.tsx",
        "!./node_modules/**/*"
    ],
    "files": [
        "./editor/index.ts",
        "./editor/login/form.ts",
        "./editor/login/router-outlet.ts",
        "./editor/login/service.ts",
        "./editor/map/editor.ts",
        "./editor/models/user.ts",
        "./editor/rules/ace.ts",
        "./editor/rules/editor.ts",
        "./editor/services/mod.ts",
        "./editor/util/interfaces.ts",
        "./typings/ace/ace.d.ts",
        "./typings/angular2/angular2.d.ts",
        "./typings/angular2/http.d.ts",
        "./typings/angular2/router.d.ts",
        "./typings/es6-promise/es6-promise.d.ts",
        "./typings/lodash/lodash.d.ts",
        "./typings/rx/rx-lite.d.ts",
        "./typings/rx/rx.d.ts",
        "./typings/tsd.d.ts",
        "./custom_typings/ace-custom.d.ts",
        "./custom_typings/webpack.d.ts"
    ]
}
