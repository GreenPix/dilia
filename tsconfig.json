{
    "version": "1.6.0-beta",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "build/",
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node"
    },
    "compileOnSave": false,
    "filesGlob": [
        "./editor/**/*.ts",
        "./index.ts",
        "./typings/**/*.ts",
        "./custom_typings/**/*.ts",
        "./editor/**/*.tsx",
        "!./node_modules/**/*"
    ],
    "files": [
        "./editor/app.ts",
        "./editor/components/login/form.ts",
        "./editor/components/login/router-outlet.ts",
        "./editor/components/map/editor.ts",
        "./editor/components/rules/ace.ts",
        "./editor/components/rules/autocompleter.ts",
        "./editor/components/rules/behaviour.ts",
        "./editor/components/rules/editor.ts",
        "./editor/components/rules/exec.ts",
        "./editor/components/rules/globals.ts",
        "./editor/components/rules/interfaces.ts",
        "./editor/components/rules/toolbar.ts",
        "./editor/index.ts",
        "./editor/libs-free.ts",
        "./editor/models/rules_editor.ts",
        "./editor/models/user.ts",
        "./editor/rules/parser.ts",
        "./editor/services/mod.ts",
        "./editor/util/injector.ts",
        "./typings/ace/ace.d.ts",
        "./typings/angular2/angular2.d.ts",
        "./typings/angular2/http.d.ts",
        "./typings/angular2/router.d.ts",
        "./typings/es6-promise/es6-promise.d.ts",
        "./typings/lodash/lodash.d.ts",
        "./typings/rx/rx-lite.d.ts",
        "./typings/rx/rx.d.ts",
        "./typings/tsd.d.ts",
        "./custom_typings/ace-custom.d.ts",
        "./custom_typings/webpack.d.ts"
    ]
}
