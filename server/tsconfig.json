{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "jsx": "react",
        "outDir": "../build/",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "lib": [
            "es5",
            "es6",
            "es2016"
        ],
        "types": [
            "body-parser",
            "compression",
            "connect-mongo",
            "cookie-parser",
            "csurf",
            "express",
            "express-session",
            "is-my-json-valid",
            "mime",
            "mongodb",
            "mongoose",
            "multer",
            "node",
            "object-hash",
            "passport",
            "passport-local",
            "passport-google-oauth",
            "serve-static",
            "socket.io",
            "validator",
            "winston"
        ]
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "exclude": [
        "../node_modules"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
